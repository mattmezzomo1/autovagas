{
  "manifest_version": 3,
  "name": "AutoVagas - Aplicação Automática de Vagas",
  "version": "1.0.0",
  "description": "Automatize suas aplicações para vagas de emprego no LinkedIn, InfoJobs, Catho e Indeed",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "cookies",
    "identity"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.infojobs.com.br/*",
    "https://infojobs.com.br/*",
    "https://www.catho.com.br/*",
    "https://catho.com.br/*",
    "https://br.indeed.com/*",
    "https://indeed.com/*",
    "https://www.vagas.com.br/*",
    "https://vagas.com.br/*",
    "https://api.autovagas.com/*",
    "http://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*"
      ],
      "js": ["content-scripts/linkedin.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.infojobs.com.br/*",
        "https://infojobs.com.br/*"
      ],
      "js": ["content-scripts/infojobs.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.catho.com.br/*",
        "https://catho.com.br/*"
      ],
      "js": ["content-scripts/catho.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://br.indeed.com/*",
        "https://indeed.com/*"
      ],
      "js": ["content-scripts/indeed.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.vagas.com.br/*",
        "https://vagas.com.br/*"
      ],
      "js": ["content-scripts/vagas.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AutoVagas",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected-scripts/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
