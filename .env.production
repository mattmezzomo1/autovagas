# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=autovagas.com

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=autovagas
DB_PASSWORD=production_password
DB_NAME=autovagas_production

# JWT Configuration
JWT_SECRET=production_jwt_secret_key
JWT_EXPIRES_IN=7d

# Proxy Configuration
PROXY_ENABLED=true

# Bright Data Configuration
BRIGHTDATA_ENABLED=true
BRIGHTDATA_API_KEY=production_brightdata_api_key
BRIGHTDATA_ZONE_ID=production_brightdata_zone_id

# Oxylabs Configuration
OXYLABS_ENABLED=true
OXYLABS_USERNAME=production_oxylabs_username
OXYLABS_PASSWORD=production_oxylabs_password

# SmartProxy Configuration
SMARTPROXY_ENABLED=true
SMARTPROXY_USERNAME=production_smartproxy_username
SMARTPROXY_PASSWORD=production_smartproxy_password

# Local Proxy Configuration
LOCAL_PROXY_ENABLED=true
LOCAL_PROXY_LIST_PATH=./proxies.txt

# Scraper Configuration
MAX_CONCURRENT_TASKS=20
DEFAULT_SCRAPER_TIMEOUT=60000
USER_AGENT_ROTATION=true
MIN_SCRAPER_DELAY=1000
MAX_SCRAPER_DELAY=5000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600000
CACHE_MAX_SIZE=10000

# User Tiers Configuration
BASIC_MAX_SEARCHES_PER_DAY=10
BASIC_MAX_JOB_DETAILS_PER_DAY=50
BASIC_USE_SERVER_SIDE_SCRAPING=false

PLUS_MAX_SEARCHES_PER_DAY=30
PLUS_MAX_JOB_DETAILS_PER_DAY=150
PLUS_USE_SERVER_SIDE_SCRAPING=true

PREMIUM_MAX_SEARCHES_PER_DAY=100
PREMIUM_MAX_JOB_DETAILS_PER_DAY=500
PREMIUM_USE_SERVER_SIDE_SCRAPING=true

# Scaling Configuration
MAX_WORKERS=0
AUTO_SCALING=true
MIN_WORKERS=4
LOAD_BALANCING_STRATEGY=round-robin
STICKY_SESSIONS=true

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=production_redis_password
REDIS_DB=0

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=production_grafana_password
